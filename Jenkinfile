pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Збірка') {
            steps {
                sh 'python3 setup.py build'
            }
        }
        stage('Тестування') {
            steps {
                sh 'python3 -m unittest tests'
            }
        }
        stage('Деплой на прод') {
            steps {
                sh 'scp dist/my_project.zip user@prod_server:/var/www/'
                sh 'ssh user@prod_server "sudo unzip -o /var/www/my_project.zip -d /var/www/my_project"'
                sh 'ssh user@prod_server "sudo systemctl restart nginx"'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
