pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'Building the project'
        sh 'mvn clean install'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing the project'
        sh 'mvn test'
        sh 'python -m unittest discover'
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying the project'
        sh 'python deploy.py'
      }
    }
  }
}
